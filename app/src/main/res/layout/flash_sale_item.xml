<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="221dp"
    android:layout_height="174dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="9dp"
    android:elevation="6dp">

    <ImageView
        android:id="@+id/itemLatestImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/latest_tools_image"
        android:scaleType="centerInside"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginStart="14dp">

        <ImageView
            android:id="@+id/rectangles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/itemRectanglesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/phones"
            android:textSize="6sp"
            android:fontFamily="@font/poppins_light"
            android:textColor="#070604"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="124dp"
        android:layout_marginStart="155dp"
        >

        <ImageView
            android:id="@+id/elipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/plus" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="128dp"
        android:layout_marginStart="120dp"
        >

        <ImageView
            android:id="@+id/elipse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/favorite" />

    </FrameLayout>

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        tools:text="Samsung S10"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginTop="106dp"/>

    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 180,000"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textSize="7sp"
        android:layout_marginTop="133dp"/>

    <FrameLayout
        android:layout_width="41dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="128dp">

        <ImageView
            android:id="@+id/red_rectangles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_rectangle" />

        <TextView
            android:id="@+id/itemSaleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30% off "
            android:textSize="6sp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/itemImageSaleImgaveView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/image_flash_sale"/>

</androidx.cardview.widget.CardView>